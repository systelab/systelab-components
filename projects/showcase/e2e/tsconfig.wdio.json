{
  "compileOnSave": true,
  "compilerOptions": {
    "sourceMap": false,
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "webdriverio/async",
      "@wdio/jasmine-framework",
      "expect-webdriverio"
    ]
  },
  "include": [
    "wdio.conf.ts",
    "**/*.ts"
  ]
}
